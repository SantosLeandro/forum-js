        div(class="box") 
            div(class="forum-category") #{cat.category.title} 
            each forum in cat.forum
                div(class="forums")
                    div(class="forum-item  forum-icon far fa-file") 
                    - url = "forum/"+ forum.forum_id
                    div(class="forum-item")
                        a(href=url)
